            @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap');
            @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap');
            @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap');
        </style>


        <script src="https://cdn.tailwindcss.com"></script>

        <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css"
              rel="stylesheet" />

        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            primary: '#FF6B6B',
                            secondary: '#947BAF',
                            positive: '#A9DC76',
                            negative: '#FF6188',
                            accent: '#FFEA79',
                            textPrimary: '#FFFFFF',
                            textSecondary: '#CCCCCC',
                            gray: '#333333',
                            black: '#222222',
                        },
                        fontFamily: {
                            'title': ['Roboto Slab', 'serif'],
                            'subtitle': ['Montserrat', 'sans-serif'],
                            'body': ['Open Sans', 'sans-serif'],
                            'ui': ['Lato', 'sans-serif'],
                            'highlight': ['Playfair Display', 'serif'],
                            'data': ['Roboto Condensed', 'sans-serif']
                        }
                    }
                }
            }
        </script>

        <title>
            José entregas |
            {% block title %}
            {% endblock title %}
        </title>
        {% block head %}
        {% endblock head %}

        {% block css %}
        {% endblock css %}
    </head>
    <body>

        <nav class="bg-gray fixed w-64 m-3 rounded-3xl" style="height: 85%">
            <div class="flex flex-col items-center justify-start h-full px-6 py-2">
                <div class="flex items-center space-x-2 mt-3">
                    <a class="text-xl text-gray-800 font-semibold font-title"
                       href="{% url 'index' %}">
                        <span class="text-textPrimary text-2xl">José</span> <span class="text-accent text-2xl">entregas</span>
                    </a>
                    <img src="{% static 'icons/yellow-box.svg' %}"
                         height="34"
                         width="34"
                         style="margin-top: -8px"
                         alt="Logo">
                </div>

                <div class="flex flex-col mt-4 font-ui items-center space-y-2 mt-6 w-full">
                    <a class="text-textPrimary hover:text-textSecondary font-title font-bold py-2 px-4 bg-zinc-800 rounded text-xl w-full text-center"
                       href="{% url 'logs' %}">Históricos</a>
                </div>

                <div class="flex flex-col mt-4 font-ui items-center space-y-2 mt-4 w-full">
                    <a class="text-textPrimary hover:text-textSecondary font-title font-bold py-2 px-4 bg-zinc-800 rounded text-xl w-full text-center"
                       href="{% url 'numbers' %}">Cadastros</a>
                </div>

                <div class="flex flex-col mt-4 font-ui items-center space-y-2 mt-4 w-full">
                    <a class="text-textPrimary hover:text-textSecondary font-title font-bold py-2 px-4 bg-zinc-800 rounded text-xl w-full text-center"
                       href="{% url 'items' %}">Itens</a>
                </div>
            </div>
        </nav>
        {% comment %} center main content {% endcomment %}
        <main class="ml-72 mt-3 flex flex-col items-center justify-start">
            {% block content %}
            {% endblock content %}
        </main>

        <footer class="bg-white fixed bottom-0 w-full">
            <div class="px-6 py-2">
                <p class="text-gray-600 text-sm text-center">© {% now "Y" %} José entregas. Todos os direitos reservados.</p>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/datepicker.min.js"></script>

        {% block script %}
        {% endblock script %}
    </body>
</html>
